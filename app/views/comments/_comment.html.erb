<p>
  <strong><%= comment.user_id %></strong>
</p>
<p>
	<%= comment.body %>
</p>

<% if current_user && current_user.admin? %>
  <%= link_to 'Delete Comment', [comment.post, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' },
               class: "btn btn-danger" %>
<% end %>
