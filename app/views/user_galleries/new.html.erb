<% provide(:title, "New User Gallery" ) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-wrap">
      <h2 class="form-title">New User Gallery</h2>
      <%= form_for :user_gallery, url: user_user_galleries_path do |f| %>
    	  <% if @user_gallery.errors.any? %>
          <div id="errorExplanation">
            <p class="alert"><%= pluralize(@user_gallery.errors.count, "error") %> 
              prohibited this post from being saved:
            </p>
            <ul>
              <% @user_gallery.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
    	  <%= f.label :name, "Gallery Name" %>
    	  <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Personal Message" %>
          <%= f.text_area :description, rows: "5" %>
        </div>

        <div class="form-group">
    	  <%= f.label :preview_image %>
    	  <%= f.file_field :preview_image %>
        </div>

    	  <%= f.submit "Create Gallery", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Back", users_path, class: "btn btn-primary" %>