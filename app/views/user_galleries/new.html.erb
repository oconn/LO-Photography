<% provide(:title, "New User Gallery" ) %>
<h1>New User Gallery</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-wrap">
      <%= form_for :user_gallery, url: user_user_galleries_path do |f| %>
    	  
        <div class="form-group">
    	  <%= f.label :name, "Gallery Name" %>
    	  <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, rows: "5" %>
        </div>

        <div class="form-group">
    	  <%= f.label :preview_image %>
    	  <%= f.file_field :preview_image %>
        </div>

    	  <%= f.submit "Create Gallery", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Back", users_path, class: "btn" %>