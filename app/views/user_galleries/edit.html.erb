<% provide(:title, "Edit User Gallery" ) %>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="form-wrap">
      <h2 class="form-title">Edit User Gallery</h2>
      <%= form_for :user_gallery, url: user_user_gallery_path(@user.id, @user_gallery), method: :patch do |f| %>
    	  

        <div class="form-group">
    	  <%= f.label :name, "Gallery Name" %>
    	  <%= f.text_field :name %>
        </div>

        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, rows: "5" %>
        </div>

        <div class="form-group">
    	  <%= f.label :preview_image %>
    	  <%= f.file_field :preview_image %>
        </div>

    	  <%= f.submit "Edit Gallery", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Back", @user, class: "btn" %>