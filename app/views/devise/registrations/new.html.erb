<div class="row">
  <div class="col-md-6">
    <div class="form-wrap">	
			<h2 class="form-title">Sign up</h2>

			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>
        
        <div class="row">
        	<div class="col-md-6">
		        <div class="form-group">
					  	<%= f.label :first_name %>
					    <%= f.text_field :first_name, :autofocus => true %>
					  </div>
					</div>
          
          <div class="col-md-6">
					  <div class="form-group">
					  	<%= f.label :last_name %>
					    <%= f.text_field :last_name, :autofocus => true %>
					  </div>
					</div>
				</div>

			  <div class="form-group">
			  	<%= f.label :email %>
			    <%= f.email_field :email, :autofocus => true %>
			  </div>
 
			  <div class="form-group">
			  	<%= f.label :password %>
			    <%= f.password_field :password %>
			  </div>

			  <div class="form-group"> 
			  	<%= f.label :password_confirmation %>
			    <%= f.password_field :password_confirmation %>
			  </div>

			 	<%= f.submit "Sign up", class: "btn btn-primary" %>
			  
			<% end %>
		</div>
	</div>
	<div class="col-md-6">
    <div class="form-wrap why-signup">
      <h2 class="form-title">Why sign up?</h2>
      <h3>Members Will:</h3>
      <ul>
      	<li>Have access to full online galleries from all their Firefly sessions</li>
      	<li>Be able to download full gallery for digital sharing</li>
      	<li>Gain access to extra tools for planning your session</li>
      	<li>Be able to browse full collections and discounted product lists/ prices for your ordering session</li>
      </ul>
      <p>All you need to do to join the community is provide your name and email, set a password, and you're in! Your email is safe with me and will not be shared.</p>
    </div>
	</div>
</div>

<%= render "devise/shared/links" %>
