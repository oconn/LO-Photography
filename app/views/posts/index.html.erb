<% provide(:title, "Blog") %>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
	    <h1 class="blog-title">L.O. Photography</h1>
    </div>
  </div>

	<div class="row">
		<div class="col-lg-9">
	    <%= render 'posts/post' %>
      <%= will_paginate @posts, :page_links => false %>
	  </div>

	  <div class="col-lg-3">
      <div class="well">
        <h3>Keyword Search</h3>
        
          <%= form_for posts_path, :method => 'get' do %>
            <div class="search-div">
              <%= text_field_tag :search, params[:search] %>
              <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
            </div>
          <% end %>
        
      </div><!-- /well -->

      <div class="well">
        <h3>Categories: <%= link_to "All", posts_path, class: "all-link" %></h3>
        <div class="row">
          <div class="col-lg-12">
            <div id="tag_cloud">
              <% tag_cloud Post.tag_counts, %w[s m l] do |tag, css_class| %>
                <%= link_to "#{tag.name}, ", tag_path(tag.name), class: css_class %>
              <% end %>
            </div>
          </div>
        </div>
      </div><!-- /well -->

      <div class="well">
        <h3>Popular Articles:</h3>
        <ul class="popular-articles">
          
        </ul>
      </div><!-- /well -->

      <div class="well">
        <h3>Newest Articles:</h3>
        <ul class="newest-articles">
          <% @newest.each do |n| %>
            <li><%= link_to "#{n.title}", post_path(n) %></li>
          <% end %>
        </ul>
      </div><!-- /well -->

    </div>
  </div>
</div>	