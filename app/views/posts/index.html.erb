<% provide(:title, "Blog") %>
<div class="container">
	<div class="row">
		<div class="col-lg-12">
	    <h1 class="blog-title">L.O. Photography</h1>
    </div>
  </div>

	<div class="row">
		<div class="col-lg-8">
	    <%= render 'posts/post' %>
	  </div>
	  
	  <div class="col-lg-4">
          <div class="well">
            <h4>Blog Search</h4>
            
              <%= form_for posts_path, :method => 'get' do %>
                <div class="search-div">
                  <%= text_field_tag :search, params[:search] %>
                  <%= submit_tag "Search", :name => nil, class: "btn btn-primary" %>
                </div>
              <% end %>
            
          </div><!-- /well -->
          <div class="well">
            <h4>Blog Categories: <%= link_to "All", posts_path, class: "all-link" %></h4>
            <div class="row">
              <div class="col-lg-12">
                <div id="tag_cloud">
                  <% tag_cloud Post.tag_counts, %w[s m l] do |tag, css_class| %>
                    <%= link_to "#{tag.name}, ", tag_path(tag.name), class: css_class %>
                  <% end %>
                </div>
              </div>
            </div>
          </div><!-- /well -->
          <div class="well">
            <h4>Popular Articles:</h4>
            
          </div><!-- /well -->
        </div>
      </div>

	<%= will_paginate @posts, :page_links => false %>
</div>	