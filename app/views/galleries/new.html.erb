<% provide(:title, "New Gallery") %>
<div class="row">
  <div class="span6 offset3">
    <div class="form-wrap">	
    	<h2 class="form-title">New Gallery</h2>
			<%= form_for :gallery, url: galleries_path do |f| %>
				<%= render 'gallery_errors' %>

	      <div>
			    <%= f.label :name %>
			    <%= f.text_field :name %>
			  </div><br />
			 
			  <div>
			    <%= f.label :description %>
			    <%= f.text_area :description, rows: "5" %>
			  </div></br />

			  <div>
    	    <%= f.label :preview_image %>
    	    <%= f.file_field :preview_image %>
        </div><br />
			 
			  <div>
			    <%= f.submit "Submit Gallery", class: "btn btn-primary" %>
			  </div>
			<% end %>
		</div>
	</div>
</div>
<%= link_to 'Back', galleries_path, class: "btn" %>
