<div class="col-md-3">
  <div class="gallery_img">
    <%= link_to("#{image_tag user_image.image.url(:thumb), class: "img-responsive gallery_img"}".html_safe, user_image.image.url(:original)) %> 
  </div>
  <% if current_user && current_user.admin? %>
    <%= link_to 'Delete', user_user_gallery_user_image_path(@user.id, @user_gallery, user_image.id),
                 method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  <% end %>
</div>  
