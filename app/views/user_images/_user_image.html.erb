<% unless user_image.image.url(:original) == "/images/original/missing.png" %>
  <div class="gallery-image-thumb">
    <%= link_to("#{image_tag user_image.image.url(:thumb)}".html_safe, user_image.image.url(:carousel)) %> 
    <% if current_user && current_user.admin? %>
      <%= link_to 'Delete', user_user_gallery_user_image_path(@user.id, @user_gallery, user_image.id),
                 method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
    <% end %>
  </div>
<% end %>

