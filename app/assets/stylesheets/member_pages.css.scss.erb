/* *** Media Queries *** */
.tool-kit-header {
	text-align: center;
	img {
		max-width:100%;
		box-shadow: 1px 1px 10px gray;
		&:hover {
			box-shadow: 4px 4px 15px gray;
		}
	}
	margin: 1em auto;
}
.style-board-container {
	margin: 3em auto;
  .row {
    margin: 0 auto;
    .col-md-3 {
    	margin: 0;
    	padding: 0;
    }
	  .board {
			img {
				width: 100%;
				border: 4px solid #000;
			}
		}
	}
}

.slide1, .slide2, .slide3 {
	width:100%;
	height:100%;
	h4 {
	  margin:0.4em;
	}
	p {
		margin: 1em 0.4em auto 0.4em;
		font-family: book;
	}
	border: 4px solid #000;
}
.slide1 {
	background-color: #fffabe;
}
.slide2 {
	background-color: #77B0B1;
}
.slide3 {
	background-color: #D4C1B4;
}
.style-important {
	margin-top: 2em;
}

/* *** Session Specials *** */

.art-collection {
	.border-on {
		border: 1px solid #000;
	}
	.deluxe-print {
		h3 {
      
		}
		ul {
			color: #fffabe;
			background-color: gray;
			border: 2px solid #000;
			li {
				padding: 0.5em;
				margin-left: 50px;
			}
		}
	}
	.a-la-carte-prints {
	  ul {
